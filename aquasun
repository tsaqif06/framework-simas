#!/usr/bin/env php
<?php
require_once 'app/Command/commandload.php';

function output($args, $color)
{
    switch ($color) {
        case 'red':
            $color = "\033[0;31m";
            break;
        case 'green':
            $color = "\033[0;32m";
            break;
        case 'yellow':
            $color = "\033[1;33m";
            break;
        case 'blue':
            $color = "\033[0;34m";
            break;
        default:
            echo "color hasnt available yet!";
            exit(1);
    }
    $reset = "\033[0m";
    echo "{$color}{$args}{$reset}";
}

if ($argc < 2) {
    echo "â• Usage: php aquasun serve [port]\n";
    exit(1);
}

$commandName = $argv[1];
$commandClass = ucfirst($commandName) . 'Command'; // ServeCommand
$arguments = array_slice($argv, 2);

if (!class_exists($commandClass)) {
    echo "âŒ Command not found: {$commandName}\n";
    exit(1);
}

$command = new $commandClass();
$command->run($arguments);
